<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
		<property name="connection.url">jdbc:mysql://localhost:3306/ecommerce?useSSL=false&amp;allowPublicKeyRetrieval=true</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.username">ashif</property>
		<property name="connection.password">Flower@123</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.generate_statistics">true</property>
        <property name="current_session_context_class">thread</property>
        <mapping resource="Product.hbm.xml"/>
        <mapping resource="Seller.hbm.xml"/>
    </session-factory>
</hibernate-configuration>